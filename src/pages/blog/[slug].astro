---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });

  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formattedDate = post.data.publishDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout
  title={`${post.data.title} | We Walk Dogs FL Blog`}
  description={post.data.description}
>
  <article class="blog-post">
    <!-- Header -->
    <header class="post-header">
      <div class="container">
        <div class="breadcrumb">
          <a href="/blog">← Back to Blog</a>
        </div>
        <h1>{post.data.title}</h1>
        <div class="post-meta">
          <time datetime={post.data.publishDate.toISOString()}>
            {formattedDate}
          </time>
          <span class="separator">•</span>
          <span class="author">{post.data.author}</span>
        </div>
        {post.data.tags.length > 0 && (
          <div class="post-tags">
            {post.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>

    <!-- Content -->
    <section class="post-content">
      <div class="container">
        <div class="content-wrapper">
          <Content />
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="post-cta">
      <div class="container">
        <div class="cta-box">
          <h2>Need Professional Dog Walking Services?</h2>
          <p>We provide reliable, caring dog walking services throughout Lake Mary, Heathrow, Longwood, and Wekiva Springs.</p>
          <div class="cta-buttons">
            <a href="/contact" class="btn btn-primary">Contact Us</a>
            <a href="/contact" class="btn btn-secondary">Call Now</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Back to Blog -->
    <section class="back-to-blog">
      <div class="container">
        <a href="/blog" class="back-link">← Back to all blog posts</a>
      </div>
    </section>
  </article>
</BaseLayout>

<style>
  .post-header {
    background: linear-gradient(135deg, var(--primary-blue) 0%, var(--primary-blue-light) 100%);
    color: white;
    padding: 3rem 0 2rem;
  }

  .breadcrumb {
    margin-bottom: 1.5rem;
  }

  .breadcrumb a {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-size: 0.95rem;
  }

  .breadcrumb a:hover {
    color: white;
    text-decoration: underline;
  }

  .post-header h1 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .post-meta {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.95rem;
    margin-bottom: 1.5rem;
  }

  .separator {
    margin: 0 0.75rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.4rem 0.9rem;
    border-radius: 20px;
    font-size: 0.85rem;
    backdrop-filter: blur(10px);
  }

  .post-content {
    padding: 3rem 0;
  }

  .content-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  .content-wrapper :global(h2) {
    color: var(--primary-blue);
    font-size: 1.8rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .content-wrapper :global(h3) {
    color: var(--primary-blue);
    font-size: 1.4rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .content-wrapper :global(p) {
    color: var(--gray-700);
    line-height: 1.8;
    margin-bottom: 1.5rem;
    font-size: 1.05rem;
  }

  .content-wrapper :global(ul),
  .content-wrapper :global(ol) {
    margin-left: 2rem;
    margin-bottom: 1.5rem;
    color: var(--gray-700);
  }

  .content-wrapper :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .content-wrapper :global(strong) {
    color: var(--gray-900);
  }

  .content-wrapper :global(a) {
    color: var(--primary-blue);
    text-decoration: underline;
  }

  .content-wrapper :global(a:hover) {
    color: var(--primary-orange);
  }

  .post-cta {
    background: var(--gray-50);
    padding: 3rem 0;
  }

  .cta-box {
    background: linear-gradient(135deg, var(--primary-orange) 0%, var(--primary-orange-light) 100%);
    color: white;
    padding: 3rem;
    border-radius: 12px;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-box h2 {
    color: white;
    margin-bottom: 1rem;
  }

  .cta-box p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    opacity: 0.95;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    padding: 0.875rem 2rem;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
  }

  .btn-primary {
    background: white;
    color: var(--primary-orange);
  }

  .btn-primary:hover {
    background: var(--gray-100);
    transform: translateY(-2px);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border: 2px solid white;
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  .back-to-blog {
    padding: 2rem 0;
  }

  .back-link {
    color: var(--primary-blue);
    text-decoration: none;
    font-weight: 600;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 1.8rem;
    }

    .content-wrapper {
      padding: 0 1rem;
    }

    .cta-box {
      padding: 2rem 1.5rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .btn {
      width: 100%;
    }
  }
</style>
