    color: var(--gray-600);
    max-width: 800px;
    margin: 0 auto 2rem;
  }

  .contact-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 600px;
    margin: 2rem auto;
  }

  .contact-method {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .contact-method h3 {
    color: var(--primary-blue);
    margin-bottom: 1rem;
  }

  .contact-method p {
    color: var(--gray-700);
    margin: 0;
  }

  .cta-section {
    background: linear-gradient(135deg, var(--primary-orange) 0%, var(--primary-orange-light) 100%);
    color: white;
  }

  .cta-section h2 {
    color: white;
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  @media (max-width: 968px) {
    .faq-nav {
      flex-direction: column;
    }

    .faq-nav-link {
      text-align: center;
    }

    .hero h1 {
      font-size: 2rem;
    }

    .contact-methods {
      grid-template-columns: 1fr;
    }
  }
